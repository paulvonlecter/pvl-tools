<Application x:Class="pvl_radio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="TrackInfoLabelControlTemplate" TargetType="{x:Type Label}">
            <Label HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="0" VerticalAlignment="Stretch" FontWeight="Bold">
                <ContentPresenter Width="Auto"/>
            </Label>
        </ControlTemplate>
    </Application.Resources>
</Application>
